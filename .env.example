# Server Configuration
NODE_ENV=production                                   # Environment: development, production
PORT=5000                                             # Port for the server to listen on
SESSION_SECRET=your-secret-key-here                   # Secret for session encryption

# Database Configuration
DATABASE_URL=postgres://user:password@host:port/db    # PostgreSQL connection string

# Supabase Configuration (for authentication)
VITE_SUPABASE_URL=https://your-project.supabase.co    # Supabase project URL
VITE_SUPABASE_ANON_KEY=your-anon-key-here             # Supabase anonymous key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key                # SendGrid API key for sending emails
EMAIL_FROM=noreply@yourdomain.com                     # Email address to send from

# AI API Keys (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here         # Format: sk-ant-api03-...
PERPLEXITY_API_KEY=your_perplexity_api_key_here       # Format: pplx-...
OPENAI_API_KEY=your_openai_api_key_here               # Format: sk-...
GOOGLE_API_KEY=your_google_api_key_here               # For Google Gemini models
MISTRAL_API_KEY=your_mistral_key_here                 # For Mistral AI models
XAI_API_KEY=YOUR_XAI_KEY_HERE                         # For xAI models
AZURE_OPENAI_API_KEY=your_azure_key_here              # For Azure OpenAI models
OLLAMA_API_KEY=your_ollama_api_key_here               # For remote Ollama servers

# Meta (Facebook) Marketing API
META_APP_ID=your_meta_app_id                          # Facebook App ID
META_APP_SECRET=your_meta_app_secret                  # Facebook App Secret
META_REDIRECT_URI=https://yourdomain.com/api/meta/oauth/callback  # OAuth callback URL
META_WEBHOOK_VERIFY_TOKEN=your_random_verify_token    # Webhook verification token (create a secure random string)